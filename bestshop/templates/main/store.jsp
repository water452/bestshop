<script>
    $(function(){
        var bullet = ['갤러리아 명품관 WEST점', '신세계 Art & Sience점', '강남본점', '양재점', '센트럴파크점', '송파본점'];
        var storSlide = new Swiper(".slide-store", {
            speed : 800,
            centeredSlides: true,
            paginationClickable: true,
            pagination: {
                el: ".slide-store .tab-pager",
                clickable: true,
                renderBullet: function (index, className) {
                    return '<div class="' + className + '"><button type="button">' + (bullet[index]) + '</button></div>';
                }
            },
            breakpoints: {
                768: {
                    slidesPerView: 1
                },
                1380: {
                    slidesPerView: 2,
                }
            },
            on: {
                slideChange: function () {
                    var _idxLeft = parseInt($('.tab-pager .swiper-pagination-bullet.swiper-pagination-bullet-active').offset().left) - 16.5,
                        _thsLeft = $('.info-store .slide-store .tab-pager').scrollLeft();

                    $('.info-store .slide-store .tab-pager').scrollLeft(_idxLeft + _thsLeft);
                }
            }
        });
        var storSlidepaging = new Swiper(".slide-store", {
            speed : 800,
            centeredSlides: true,
            paginationClickable: true,
            pagination: {
                el: ".slide-store .slide-navi .pager-pagination"
            },
            breakpoints: {
                768: {
                    slidesPerView: 1
                },
                1380: {
                    slidesPerView: 2
                }
            }
        });
        storSlide.controller.control = storSlidepaging;

        $('.slide-store .tab-pager button').click(function(){
            var _ths = parseInt($(this).offset().left) - 16.5,
                _thsLeft = $('.info-store .slide-store .tab-pager').scrollLeft();

            $('.info-store .slide-store .tab-pager').scrollLeft(_ths + _thsLeft);
        });
    });
</script>