<script>
    // 모바일 영상 상세 txt box (toggle class)
    $(document).on("click", ".btnTargetToggle", function(){
        var target = $(this).attr("data-target"),
            c = $(this).attr("data-class");
        $(this).toggleClass(c);
        $(target).toggleClass(c);
    });

    // 모바일 video Sticky
    var didScroll;
    function mScrollSticky(){
        var winTop = $(window).scrollTop(),
            box = $(".mScrollSticky"),
            top = box.offset().top,
            video = box.find(".video-wrap"),
            videoHeight = video.outerHeight();

        if ( winTop >= top ){ box.addClass("sticky"); }
        else { box.removeClass("sticky"); };

        if ( $(window).width() < 768 ){
            if ( box.is(".sticky") ){
                video.css({ "position": "fixed", "top": "0", "left": "0", "padding": "0 16px", "width": "100%", "z-index": "1" });
                box.css({ "height": videoHeight });
            }
            else {
               video.removeAttr("style"); 
               box.removeAttr("style"); 
            };
        }
        else {
            video.removeAttr("style"); 
            box.removeAttr("style"); 
        };
    };
    mScrollSticky();

    setInterval(function() { 
        if (didScroll) { 
            mScrollSticky(); 
            didScroll = false; 
        } 
    }, 50);

    $(window).scroll(function(){
        didScroll = true;
    });
</script>

